---
apiVersion: v1
name: "elastic/ent-search/ent-search"
tags:
- "<%= product_version %>"
- "latest"
# Build args passed to Dockerfile ARGs
args:
  BASE_IMAGE: "redhat/ubi/ubi9"
  BASE_TAG: "9.6"

labels:<% docker_labels.each do |label, value| %>
  <%= label %>: "<%= value %>"<% end %>

# List of resources to make available to the offline build context
resources:
  - filename: "<%= tini_bin %>"
    url: "https://github.com/krallin/tini/releases/download/v0.19.0/<%= tini_bin %>"